                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Established" FontWeight="Medium"/>
                                        <DatePicker SelectedDate="{Binding Established}"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
