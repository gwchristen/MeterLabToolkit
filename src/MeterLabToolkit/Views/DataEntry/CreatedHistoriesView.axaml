        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Created Histories" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Manage meter and device creation history records" Opacity="0.7" Margin="0,5,0,0"/>
