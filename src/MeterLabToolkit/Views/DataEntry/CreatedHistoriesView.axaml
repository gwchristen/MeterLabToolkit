                                <StackPanel Spacing="10">
                                    <TextBlock Text="Record Details" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Status" FontWeight="Medium"/>
                                        <ComboBox ItemsSource="{Binding Statuses}"
                                                 SelectedItem="{Binding SelectedStatus}"
                                                 DisplayMemberBinding="{Binding Code}"
                                                 HorizontalAlignment="Stretch"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Manufacturer" FontWeight="Medium"/>
                                        <ComboBox ItemsSource="{Binding Manufacturers}"
                                                 SelectedItem="{Binding SelectedManufacturer}"
                                                 DisplayMemberBinding="{Binding Code}"
                                                 HorizontalAlignment="Stretch"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Device Code" FontWeight="Medium"/>
                                        <ComboBox ItemsSource="{Binding DeviceCodes}"
                                                 SelectedItem="{Binding SelectedDevCode}"
                                                 DisplayMemberBinding="{Binding Code}"
                                                 HorizontalAlignment="Stretch"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Beginning Serial" FontWeight="Medium"/>
                                        <TextBox Text="{Binding BegSer}" Watermark="Enter beginning serial"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Ending Serial" FontWeight="Medium"/>
                                        <TextBox Text="{Binding EndSer}" Watermark="Enter ending serial"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Out of Range (OOR)" FontWeight="Medium"/>
                                        <TextBox Text="{Binding Oor}" 
                                                Watermark="e.g., 10023-10033, 20023-20033"
                                                AcceptsReturn="False"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Quantity" FontWeight="Medium"/>
                                        <TextBox Text="{Binding Qty}" IsReadOnly="True" Background="#F5F5F5"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="PO Date" FontWeight="Medium"/>
                                        <DatePicker SelectedDate="{Binding PoDate}"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="PO Number" FontWeight="Medium"/>
                                        <TextBox Text="{Binding PoNumber}" Watermark="Enter PO number"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Received Date" FontWeight="Medium"/>
                                        <DatePicker SelectedDate="{Binding RecvDate}"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Unit Cost" FontWeight="Medium"/>
                                        <TextBox Text="{Binding UnitCost}" Watermark="0.00"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="CID" FontWeight="Medium"/>
                                        <TextBox Text="{Binding Cid}" Watermark="Enter CID"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="M.E. Number" FontWeight="Medium"/>
                                        <TextBox Text="{Binding MeNumber}" Watermark="Enter M.E. number"/>
                                    </StackPanel>

                                    <StackPanel Spacing="5">
                                        <TextBlock Text="Purchase Code" FontWeight="Medium"/>
                                        <ComboBox ItemsSource="{Binding PurchaseCodes}"
                                                 SelectedItem="{Binding SelectedPurCode}"
                                                 DisplayMemberBinding="{Binding Code}"
