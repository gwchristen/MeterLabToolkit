             x:Class="MeterLabToolkit.Views.DataEntry.CreatedHistoriesView"
             x:DataType="vm:CreatedHistoriesViewModel">
    
    <Design.DataContext>
        <vm:CreatedHistoriesViewModel/>
    </Design.DataContext>

