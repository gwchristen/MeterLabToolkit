<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MeterLabToolkit.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="MeterLabToolkit.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MeterLabToolkit"
        Width="1200" Height="700">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto,Auto">
        <!-- Main content area with navigation -->
        <Grid Grid.Row="0" ColumnDefinitions="250,*">
            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="MeterLab Toolkit" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                        
                        <!-- Data Entry Section -->
                        <Expander Header="Data Entry" IsExpanded="True" Margin="0,0,0,10">
                            <StackPanel Margin="10,5,0,0">
                                <Button Content="Created Histories" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="CreatedHistories"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Cellular/uAP Registration" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="CellularRegistration"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="RMA Entries" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="RmaEntries"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                            </StackPanel>
                        </Expander>

                        <!-- Reference Tables Section -->
                        <Expander Header="Reference Tables" Margin="0,0,0,10">
                            <StackPanel Margin="10,5,0,0">
                                <Button Content="OpCo" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="OpCoTable"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Status" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="StatusTable"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Manufacturer Codes" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="ManufacturerTable"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Device Codes" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="DeviceCodeTable"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Lookup Codes" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="LookupCodeTable"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Purchase Codes" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="PurchaseCodeTable"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                            </StackPanel>
                        </Expander>

                        <!-- Tools Section -->
                        <Expander Header="Tools" Margin="0,0,0,10">
                            <StackPanel Margin="10,5,0,0">
                                <Button Content="CSV Date Updater" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="CsvDateUpdater"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Serial Range Generator" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="SerialRangeGenerator"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="Range Splitter" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="RangeSplitter"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                                <Button Content="AEP Barcode Generator" 
                                        Command="{Binding NavigateToViewCommand}"
                                        CommandParameter="AepBarcodeGenerator"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Column="1" Background="White" Padding="20">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>

        <!-- GridSplitter for bottom panel -->
        <GridSplitter Grid.Row="1" 
                      Height="5" 
                      HorizontalAlignment="Stretch"
                      Background="#E0E0E0"
                      IsVisible="{Binding IsBottomPanelVisible}"/>

        <!-- Collapsible Bottom Panel -->
        <Border Grid.Row="2" 
                Background="#F9F9F9" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                MinHeight="100"
                MaxHeight="300"
                IsVisible="{Binding IsBottomPanelVisible}">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0" Background="#E8E8E8" Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Quick Tools" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <Button Content="Ã—" 
                                Command="{Binding ToggleBottomPanelCommand}"
                                Margin="10,0,0,0"
                                Padding="5,0"
                                ToolTip.Tip="Close Panel"/>
                    </StackPanel>
                </Border>
                <TextBlock Grid.Row="1" 
                           Text="Tools can be pinned here for quick access" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Opacity="0.5"/>
            </Grid>
        </Border>
    </Grid>

</Window>
