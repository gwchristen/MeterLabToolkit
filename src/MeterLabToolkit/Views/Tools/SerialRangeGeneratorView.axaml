<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MeterLabToolkit.ViewModels.Tools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MeterLabToolkit.Views.Tools.SerialRangeGeneratorView"
             x:DataType="vm:SerialRangeGeneratorViewModel">
     
    <Design.DataContext>
        <vm:SerialRangeGeneratorViewModel/>
    </Design.DataContext>

    <StackPanel>
        <TextBlock Text="Serial Range Generator" FontSize="24" FontWeight="Bold" Foreground="#ffffff" Margin="0,0,0,20"/>
        <TextBlock Text="Generate serial number ranges" Foreground="#999999" Margin="0,0,0,20"/>
        
        <Border Background="#2d2d30" BorderBrush="#3f3f46" BorderThickness="1" Padding="20" CornerRadius="4">
            <TextBlock Text="Tool interface will be implemented here" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="#999999"
                       Opacity="0.7"/>
        </Border>
    </StackPanel>
    
</UserControl>
